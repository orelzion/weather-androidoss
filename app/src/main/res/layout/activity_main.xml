<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/firstTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bnei Brak, Israel"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/firstTV"
        app:layout_constraintStart_toStartOf="@id/firstTV"
        app:layout_constraintEnd_toEndOf="@id/firstTV"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/currentTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23°"
        app:layout_constraintTop_toBottomOf="@+id/weatherIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/weatherCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentTemperature"
        android:layout_marginTop="15dp"
        android:text="Cloudy"
        />

    <ImageView
        android:id="@+id/weatherIcon1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/weatherIcon2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/weatherIcon1"
        app:layout_constraintTop_toTopOf="@+id/weatherIcon1"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon1"
        android:text="Tuesday"/>

    <TextView
        android:id="@+id/condition1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21°"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weatherIcon1"
        app:layout_constraintTop_toTopOf="@+id/weatherIcon1"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon1" />

    <ImageView
        android:id="@+id/weatherIcon2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/weatherIcon3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/weatherIcon2"
        app:layout_constraintTop_toTopOf="@+id/weatherIcon2"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon2"
        android:text="Wednesday"/>

    <TextView
        android:id="@+id/condition2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22°"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weatherIcon2"
        app:layout_constraintTop_toTopOf="@+id/weatherIcon2"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon2" />

    <ImageView
        android:id="@+id/weatherIcon3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/weatherIcon4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/date3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/weatherIcon3"
        app:layout_constraintTop_toTopOf="@+id/weatherIcon3"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon3"
        android:text="Thursday"/>

    <TextView
        android:id="@+id/condition3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="33°"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weatherIcon3"
        app:layout_constraintTop_toTopOf="@+id/weatherIcon3"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon3" />

    <ImageView
        android:id="@+id/weatherIcon4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/weatherIcon5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/date4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/weatherIcon4"
        app:layout_constraintTop_toTopOf="@+id/weatherIcon4"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon4"
        android:text="Friday"/>

    <TextView
        android:id="@+id/condition4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="44°"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weatherIcon4"
        app:layout_constraintTop_toTopOf="@+id/weatherIcon4"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon4" />

    <ImageView
        android:id="@+id/weatherIcon5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/date5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/weatherIcon5"
        app:layout_constraintTop_toTopOf="@+id/weatherIcon5"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon5"
        android:text="Saturday"/>

    <TextView
        android:id="@+id/condition5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="55°"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weatherIcon5"
        app:layout_constraintTop_toTopOf="@+id/weatherIcon5"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon5" />

</androidx.constraintlayout.widget.ConstraintLayout>